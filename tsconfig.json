{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "useDefineForClassFields": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules"//,
    //"tests"
  ]
}